<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.github.marcocipriani01.mathstests">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="io.github.marcocipriani01.mathstests.MainActivity"
            android:theme="@style/Theme.AppCompat.Dialog">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="io.github.marcocipriani01.mathstests.TrinomialFactoringActivity"
            android:label="Trinomial factoring" />

        <activity
            android:name="io.github.marcocipriani01.mathstests.RuffiniActivity"
            android:label="Ruffini's rule" />

        <activity
            android:name="io.github.marcocipriani01.mathstests.GameActivity"
            android:label="Easter egg"
            android:screenOrientation="locked"
            android:theme="@style/Theme.AppCompat.Light.Dialog" />
    </application>

</manifest>