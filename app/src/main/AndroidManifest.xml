<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="squareboot.mathstests">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.AppCompat.Dialog">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".TrinomialFactoringActivity"
            android:label="Trinomial factoring" />

        <activity
            android:name=".RuffiniActivity"
            android:label="Ruffini's rule" />

        <activity
            android:name=".FractionsActivity"
            android:label="Fractions" />

        <activity android:name=".GameActivity"
            android:label="Easter egg"
            android:theme="@style/Theme.AppCompat.Light.Dialog"
            android:screenOrientation="locked"
            />
    </application>

</manifest>